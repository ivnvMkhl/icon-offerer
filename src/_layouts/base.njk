    <!-- Предотвращаем FOUC (flash of unstyled content) для темной темы -->
    <script>
        (function() {
            // Получаем сохраненную тему или системную
            const savedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const theme = savedTheme || (prefersDark ? 'dark' : 'light');
            
            // Применяем тему сразу, до загрузки CSS
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>
    
    <link rel="stylesheet" href="{{ baseUrl }}/css/common.css">
    {% if cssModules %}
        {% for module in cssModules %}
    <link rel="stylesheet" href="{{ baseUrl }}/css/{{ module }}.css">
        {% endfor %}
    {% endif %}
</head>
<body>
    <header class="header">
        <nav class="nav">
            <a href="{{ baseUrl }}/" class="nav__logo">icon-offerer</a>
            <button class="theme-toggle" id="themeToggle" aria-label="Переключить тему">
